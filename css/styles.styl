@import 'nib'

#ST-chart
	position relative
	width 100%
	min-height 200px

.ST-canvas 
	font 10px sans-serif

.ST-canvas .ST-line 
	fill none
	stroke steelblue
	stroke-width 1.5px

.ST-canvas .ST-axis,.ST-canvas text
	cursor default
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select -moz-none
	-ms-user-select none
	user-select none

.ST-canvas text
	opacity .75

.ST-canvas .ST-axis path,
.ST-canvas .ST-axis line 
	fill none
	stroke #ccc
	shape-rendering crispEdges

.ST-canvas .ST-brush .extent 
	fill #333
	fill-opacity 0.1
	stroke #333
	stroke-width 1px
	stroke-opacity 0.4
	shape-rendering crispedges
	stroke-dasharray 3, 3

.ST-canvas .ST-point, .ST-canvas path, .ST-canvas line
	pointer-events none

.ST-canvas .ST-point circle 
	fill #000
.ST-canvas .ST-point text 
	font-size 1.2em
	text-shadow 0 0 6px #fff


.ST-y,.ST-brush
	path.domain,.tick line
		stroke none
.ST-x
	.tick
		text
			font-size 1.1em
			transform translateY(5px)
		line
			stroke #ccc

.ST-brush
	g:not(.ST-brusher)
		opacity .5
	.ST-event-rect,
	.ST-event-circle
		pointer-events none

.ST-category-timeline-hr
	stroke #ccc
	stroke-width 1px
	shape-rendering crispEdges

.ST-category-timeline-name
	font-size 1.3em
	font-weight 200

.ST-event-circle
	stroke #fff
	fill-opacity .7
.ST-event-rect
	fill-opacity .5

.ST-tooltipped text
	display none

.ST-tooltipped:hover text
	display block