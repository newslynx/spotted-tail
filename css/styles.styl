@import 'nib'

#ST-chart
	position relative
	width 100%
	min-height 200px
	box-sizing border-box

.ST-canvas 
	font 10px sans-serif

.ST-canvas .ST-line 
	fill none
	stroke steelblue
	stroke-width 1.5px

.ST-canvas .ST-axis,.ST-canvas text
	cursor default
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select -moz-none
	-ms-user-select none
	user-select none

.ST-canvas text
	opacity .75

.ST-canvas .ST-axis path,
.ST-canvas .ST-axis line 
	fill none
	stroke #ccc
	shape-rendering crispEdges

.ST-canvas .ST-brush .extent 
	fill #333
	fill-opacity 0.1
	stroke #333
	stroke-width 1px
	stroke-opacity 0.4
	shape-rendering crispedges
	stroke-dasharray 3, 3

.ST-canvas .ST-point, .ST-canvas path, .ST-canvas line
	pointer-events none

.ST-canvas .ST-point circle 
	fill #000
	stroke-width .5px
	stroke #fff
.ST-canvas .ST-point text 
	font-size 1.2em
	text-shadow 0 0 6px #fff


.ST-y,.ST-brush
	path.domain,.tick line
		stroke none
.ST-x
	.tick
		text
			font-size 1.1em
			transform translateY(5px)
		line
			stroke #ccc

.ST-brush
	g:not(.ST-brusher)
		opacity .5
	.ST-event-rect,
	.ST-event-circle
		pointer-events none

.ST-category-timeline-hr
	stroke #ccc
	stroke-width 1px
	shape-rendering crispEdges

.ST-category-timeline-name
	font-size 1.3em
	font-weight 200

.ST-event-circle
	stroke #fff
	fill-opacity .7
.ST-event-circle.ST-highlighted,
.ST-event-rect.ST-highlighted
	stroke #000
.ST-event-rect
	fill-opacity .5
	pointer-events none

.ST-tooltipped text
	display none
	font-size 1.3em

.ST-tooltipped:hover text
	display block

.ST-event-circle.ST-hyperlinked:hover
	cursor pointer
	
.ST-follow-line
	stroke #000
	stroke-width 1px
	pointer-events none
	
#ST-hover-window-container
	position absolute
	font-family Helvetica, sans-serif
	width 250px
	font-size 13px
	background-color rgba(255,255,255,.75)
	border 1px solid #ccc
	padding 10px
	box-sizing border-box
	border-radius 3px
	pointer-events none
	z-index 9999999
.ST-hover-swatch,
.ST-hover-section-label,
.ST-hover-event-info-item-text,
.ST-hover-section-value
	display inline-block
	vertical-align top
.ST-hover-swatch
	width 8px
	height @width
	margin-right 5px
.ST-hover-section-label
	width 125px
	
.ST-hover-event-info-category-label
	text-transform uppercase
	font-size .8em
	font-weight bold
	margin-top 10px
	margin-bottom 2px
.ST-hover-timestamp
	margin-bottom 5px
.ST-hover-event-info-timestamp
	font-size .9em
	font-style italic
	margin 5px 0 3px 0
	
.ST-hover-event-info-item
	margin-bottom 5px
		
.ST-hover-event-info-timestamp.ST-highlighted
	span
		padding 2px 5px
		background-color #FFE325
